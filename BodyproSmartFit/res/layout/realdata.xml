<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"> 
	<TableLayout
	android:layout_width="fill_parent" android:baselineAligned="true" android:layout_height="wrap_content">
		<TableRow 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		>
			<TextView			
			android:layout_height="50sp" 
			android:layout_span="2" 			
			android:textSize="20sp" 
			android:text="심 박 수 Monitor" 
			android:gravity="center" android:layout_width="fill_parent" android:background="@color/green_bg" android:textColor="@color/black_bg"/>
		</TableRow>
		<TableRow 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
			<ImageView			 
			android:padding="10dip" 
			android:layout_width="120sp" 
			android:layout_height="170sp" 
			android:id="@+id/heartbeatAni" android:background="@anim/heartbeat"/>
			<TextView			
			android:padding="3dip" android:text="HR" android:gravity="center" android:textSize="100sp" android:layout_height="fill_parent" android:layout_width="200sp" android:id="@+id/hrTextView"/>
		</TableRow>
		<TableRow 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
			<TextView 
			android:layout_height="50sp" 
			android:layout_width="fill_parent"
			android:layout_span="2"			
			android:text="걸 음 수 Monitor" 
			android:textSize="20sp" 
			android:gravity="center" android:background="@color/blue_bg" android:textColor="@color/black_bg"/>
		</TableRow>
		<TableRow 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent">
			<ImageView			 
			android:padding="3dip" android:layout_height="170sp"/>
			<LinearLayout 
			android:id="@+id/LinearLayout01" 
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent" android:orientation="vertical">
			<TextView 
			android:text="accX" 
			android:textSize="15sp" 
			android:id="@+id/accXText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			<TextView 
			android:text="accY" 
			android:textSize="15sp" 
			android:id="@+id/accYText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			<TextView 
			android:text="accZ" 
			android:textSize="15sp" 
			android:id="@+id/accZText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			<TextView 
			android:text="oriX" 
			android:textSize="15sp" 
			android:id="@+id/oriXText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			<TextView 
			android:text="oriY" 
			android:textSize="15sp" 
			android:id="@+id/oriYText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			<TextView 
			android:text="oriZ" 
			android:textSize="15sp" 
			android:id="@+id/oriZText" 
			android:layout_height="25sp" 
			android:layout_width="fill_parent" 	
			android:padding="3dip"/>
			</LinearLayout>		
		</TableRow>
	</TableLayout>
	<LinearLayout
		android:layout_width="fill_parent" 
		android:gravity="center" android:background="@color/white_bg" android:layout_height="fill_parent" android:layout_marginTop="440sp">
			<ImageButton
			android:id = "@+id/exitBtn"
			android:src="@drawable/icon" android:layout_height="50sp" android:layout_width="50sp" android:layout_marginLeft="10sp" android:background="@color/white_bg"/>
			<ImageButton
			android:id = "@+id/searchBtn"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@drawable/searchbtn_rollover" android:layout_marginLeft="30sp"/>
	<!-- 		<ImageButton
			android:id = "@+id/connectBtn"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30sp" android:background="@drawable/connect_icon_over"/> -->
			<ImageView
			android:id = "@+id/connectState"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_marginLeft="30sp" 
			android:background="@drawable/connect_icon_over"/>						
	</LinearLayout>
</RelativeLayout>
